<html>

<head>
    <title>expForc</title>
    <link rel="stylesheet" type="text/css" href="css/experimento.css">

</head>

<body style="overflow: hidden;" onload="random()">

    <div class="container">
        <form id="formA" action='/envExpA' method='POST'>
            <button type="submit" onclick="clickA()" class="botao" id="opA" d>A</button>
        </form>
    </div>

    <div class="container2">
        <form id="formB" action='/envExpB' method='POST'>
            <button type="submit" onclick="clickB()" class="botao" id="opB">B</button>
        </form>
    </div>

    <form action='/envExpBComp' name="envExpBComp" method='POST'/>

</body>

</html>

<script>
	function random(){
		min = Math.ceil(3);
		max = Math.floor(1);
		var preRand = Math.floor(Math.random() * (max - min)) + min;
		var rand = preRand%2;
		console.log(rand);
		if(rand == 0){
			document.getElementById("formA").style.display  = "none";
        }
        if(rand == 1){
            document.getElementById("formB").style.display  = "none";
        }
    }
    
    
    var tempo = 0;

    function clickA() {
        console.log("opA");
        console.log(tempo);
        document.getElementById("opA").style.display  = "none";
        document.getElementById("opB").style.display  = "none";
        return apareceA();
    }
    function clickB(){
        console.log("opB");
        console.log(tempo);
        document.getElementById("opA").style.display  = "none";
        document.getElementById("opB").style.display  = "none";
        return apareceB();
    }
    function apareceA(){
        setTimeout(function(){  
            document.getElementById("opA").style.display  = "block";
            tempo = 5.00;
        }, 5000)
    }
    function apareceB(){
        setTimeout(function(){  
            document.getElementById("opB").style.display  = "block";
            tempo = 5.00;
            envFormB();
        }, 5000)
    }

    function envFormB(){
        setTimeout(function(){
            document.envExpBComp.submit();
        },5000)
    }

</script>