<html>
        
	<head>
		<title>Configuracoes</title>
        <link rel="stylesheet" type="text/css" href="css/config.css">
        
        <form autocomplete="off" action='/' method='GET'>	
            <h2><input type="submit" class="botao" id="resultados" value="Voltar" name="HOME"></input></h2>
        </form>
        
	</head>
<div class="container">		
        <head>
                <h1>Configurações</h1>                  
        </head>
       
        <body>
                <h2>Configurações Atuais</h2>

		<table>	
			<tr>	
				<th>Usar fator</th>
                                <th>Fator (segundos)</th>		
			</tr>
		
			<tr>
				<td> <%= difOnTd %> </td>
                                <td> <%= difMinTd %> </td>
			</tr>
		</table>


                <form action = '/configurar' method= 'post'>
                        <input title="Usar fator" onclick="verify()" type="checkbox" name="difOn" id="difOn">
                                <input id="label" value="Usar fator">
                        </input>
                        <input  type="number" id="difMin" name="difMin" placeholder="Fator de Diferença (s)"  disabled required></input>
                        <input type="submit" id="definir" class="botao" value="Definir" name="definir" > </input>
                </form>    
        </body>
</div>

</html>

<script type="text/javascript">
        function verify(){
              var check = document.getElementById("difOn");
              var campoFator = document.getElementById("difMin");
              if(check.checked==true){
                      campoFator.disabled = false;
              }else{
                      campoFator.disabled = true;
              }
        }

</script>